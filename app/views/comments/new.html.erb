<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </div>

  <div class="form-group">
    <%= f.label :body, "Comment" %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.submit "Update Comment" %>
  </div>
<% end %>

<%= link_to 'Cancel', @post%>