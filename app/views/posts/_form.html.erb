<div class="container mt-1 ">

  <%= form_with model: @post do |form| %>
      <%= form.hidden_field :user_id, value: current_user.id %>
    
    <div class="field">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select a Category" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control form-control-lg" %>
    </div>

    <div class="mb-4 ">
      <%= form.label :body, class: "form-label " %>
      <%= form.text_area :body,class:'ckeditor'%>
    </div>

    <div class="form_group">
      <%= form.label :'Upload Image' %>
      <%= form.file_field :post_images %>
    </div> </br>

    <div class="mb-4">
      <%= form.submit "Create Post", class: "btn btn-primary btn-lg w-100" %>
    </div>
  <% end %>
  
</div>
