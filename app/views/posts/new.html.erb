<h1>New Post</h1>

<%= form_with model: @post do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
