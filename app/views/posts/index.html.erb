<% @posts.each do |post| %>
  <div class="container mt-4 mb-4 p-3" style="max-width: 1200px;"> <!-- Increased max-width and padding -->
    <div class="card d-flex flex-column flex-md-row"> <!-- flex-column for small screens, flex-md-row for larger screens -->
      <!-- Post Content (Text and Title) -->
      <div class="card-body d-flex flex-column justify-content-between">
        <h3 class="card-title"><%= post.title %></h3>
        <p class="card-text"><%= truncate(post.body, length: 200) %></p>
        <%= link_to 'Read more', post_path(post), class: 'btn btn-primary' %>
      </div>

      <!-- Post Image (Optional: Replace with actual image URL or path) -->
      <% if  %>
        <img src="https://miro.medium.com/v2/resize:fit:720/format:webp/0*wnLPI2XPit5deHE3.png" class="img-fluid" alt="Post image" style="max-height: 180px; object-fit: cover;">
      <% else %>
        <img src="https://miro.medium.com/v2/resize:fit:720/format:webp/0*wnLPI2XPit5deHE3.png" class="img-fluid" alt="Post image" style="max-height: 180px; object-fit: cover;">
      <% end %>
    </div>
    <!-- Horizontal Divider -->
    <hr style="height:2px; background-color:#ddd;">
  </div>
<% end %>
