<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card p-4" style="max-width: 500px; width: 100%;">
    <h1>Create Profile</h1>
    <%= form_for @profile, html: { class: 'form-horizontal' } do |f| %>
      <% if @profile.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
          <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :interest, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :interest, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :age, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.number_field :age, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :dob, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.date_select :dob, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :city, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :bio, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_area :bio, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.file_field :image, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit "Create Profile", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
