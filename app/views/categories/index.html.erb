<!-- app/views/categories/index.html.erb -->
<div class="container mt-4">

  <%= link_to 'Create a New Category', new_category_path, class: 'btn btn-success mb-3' %>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col">
        <%= link_to category.name, category_path(category), class: "btn btn-outline-primary w-100 h-500" %>
      </div>
    <% end %>
  </div>
</div>
<br><br>

<div class="container">
  <div class="d-flex flex-column">
    <% @categories.each do |category| %>
 <% if current_user && current_user.admin? %>
      <div class="mb-2 d-flex align-items-center">
     
        <%= link_to category.name, category_path(category), class: "btn btn-outline-primary me-2 w-50" %>
          <%= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-secondary me-2" %>
          <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


